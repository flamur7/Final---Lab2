@model IEnumerable<Final___Lab2.Models.KategoriaAnalizave>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista e Kategorive</h1>

<table class="table table-bordered border-dark">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KategoriaAnalizaveId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lloji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rendesia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriaAnalizaveId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lloji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rendesia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id=item.KategoriaAnalizaveId}, new { @class = "btn btn-success", @style = "color:white" })
            </td>
        </tr>
}
    </tbody>
</table>
@section Styles{
    <link rel="stylesheet" href="~/css/keyframe.css" />
}