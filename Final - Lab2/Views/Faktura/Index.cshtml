@model IEnumerable<Final___Lab2.Models.Faktura>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pagesat</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>

<table class="table table-bordered border-dark">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrPersonal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shuma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrPersonal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shuma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valuta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new {id=item.Id}, new { @class = "btn btn-success", @style = "color:white" }) |
                @Html.ActionLink("Delete", "Delete", new {id=item.Id}, new { @class = "btn btn-danger", @style = "color:white" })
            </td>
        </tr>
}
    </tbody>
</table>
@section Styles{
    <link rel="stylesheet" href="~/css/keyframe.css" />
}