@model Final___Lab2.Models.Faktura

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Faktura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input disabled asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrPersonal" class="control-label"></label>
                <input asp-for="NrPersonal" class="form-control" />
                <span asp-validation-for="NrPersonal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shuma" class="control-label"></label>
                <input asp-for="Shuma" class="form-control" />
                <span asp-validation-for="Shuma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valuta" class="control-label"></label>
                <input asp-for="Valuta" class="form-control" />
                <span asp-validation-for="Valuta" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Completed" /> @Html.DisplayNameFor(model => model.Completed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PagesaId" class="control-label"></label>
                <input disabled asp-for="PagesaId" class="form-control" />
                <span asp-validation-for="PagesaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Styles{
    <link rel="stylesheet" href="~/css/keyframe.css" />
}