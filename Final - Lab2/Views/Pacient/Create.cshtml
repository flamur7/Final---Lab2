@model Final___Lab2.Models.Pacient

@{
    ViewData["Title"] = "Create";
}

<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height:45;">
            <h4>Shto Pacient te ri</h4>
        </div>
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NrPersonal" class="control-label"></label>
                        <input asp-for="NrPersonal" class="form-control" />
                        <span asp-validation-for="NrPersonal" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Note" class="control-label"></label>
                        <input asp-for="Note" class="form-control" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 btn-group">
                    <div class="form-group col-8 p-0">
                        <label asp-for="ProfilePhoto" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="ProfilePhoto" class="custom-file-input" id="customFile"
                                onchange="document.getElementById('PreviewPhoto').src = window.URL.createObjectURL(this.files[0])" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                    </div>

                    <div class="form-group col-4">
                        <img id="PreviewPhoto" src="~/lib/NewFolder/NoImage.png" alt="Logo Image"
                            width="125" height="125" style="border:1px; margin-top:20px;" />
                    </div>
                </div>


                <div class="col-md-12">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>
                                    Semundje
                                </th>
                                <th>
                                     Barnat
                                </th>
                                <th>
                                    Kohezgjatja
                                </th>
                            </tr>
                        </thead>
                      <tbody>
                            @*  @foreach (var item in Model.Terapis)*@
                              @for (int i=0; i < Model.Terapis.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.EditorFor(x=> x.Terapis[i].Semundje, new{htmlAttributes = new { @class = "form-control"}})
                                            @*<input asp-for="@item.Semundje" class="form-control" />*@
                                        </td>
                                        <td>
                                            @Html.EditorFor(x=> x.Terapis[i].Barnat, new{htmlAttributes = new { @class = "form-control"}})
                                            @*<input asp-for="@item.Barnat" class="form-control" />*@
                                        </td>
                                        <td>
                                            @Html.EditorFor(x=> x.Terapis[i].Kohezgjatja, new{htmlAttributes = new { @class = "form-control"}})
                                            @*<input asp-for="@item.Kohezgjatja" class="form-control" />*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                     </div>



                <div class="col-12 btn-group">
                    <div class="col-6 form group text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    </div>
                    <div class="col-6 form-group text-left p-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
             </div>
        </form>
    </div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

	<script type="text/javascript">		
		$(".custom-file-input").on("change", function () {
			var fileName = $(this).val().split("\\").pop();
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);
		});
    </script>
    }