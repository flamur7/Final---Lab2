@model Final___Lab2.Models.Doctor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shto Doktor</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <input disabled asp-for="DoctorId" class="form-control" />
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrPersonal" class="control-label"></label>
                <input asp-for="NrPersonal" class="form-control" />
                <span asp-validation-for="NrPersonal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emri" class="control-label"></label>
                <input asp-for="Emri" class="form-control" />
                <span asp-validation-for="Emri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mbiemri" class="control-label"></label>
                <input asp-for="Mbiemri" class="form-control" />
                <span asp-validation-for="Mbiemri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specalizimi" class="control-label"></label>
                <input asp-for="Specalizimi" class="form-control" />
                <span asp-validation-for="Specalizimi" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="Pershkrimi" class="control-label"></label>
                <input asp-for="Pershkrimi" class="form-control" />
                <span asp-validation-for="Pershkrimi" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <h1>Appoitment</h1>
                <br />
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th style="text-align:center">
                                    Data
                                </th>
                                <th style="text-align:center">
                                     Time
                                </th>
                            </tr>
                        </thead>
                      <tbody>
                            @*  @foreach (var item in Model.Terapis)*@
                              @for (int i=0; i < Model.Appointments.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.EditorFor(x=> x.Appointments[i].Date, new{htmlAttributes = new { @class = "form-control"}})
                                            @*<input asp-for="@item.Semundje" class="form-control" />*@
                                        </td>
                                        <td>
                                            @Html.EditorFor(x=> x.Appointments[i].Time, new{htmlAttributes = new { @class = "form-control"}})
                                            @*<input asp-for="@item.Barnat" class="form-control" />*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                     </div>
                     <div class="col-md-12">
                         <h1>Kontrolla Mjeksore</h1>
                         <br />
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th style="text-align:center">
                                     Pershkrimi
                                </th>
                            </tr>
                        </thead>
                      <tbody>
                            @*  @foreach (var item in Model.Terapis)*@
                              @for (int i=0; i < Model.KontrollaMjeksores.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.EditorFor(x=> x.KontrollaMjeksores[i].Pershkrimi, new{htmlAttributes = new { @class = "form-control"}})
                                            @*<input asp-for="@item.Semundje" class="form-control" />*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                     </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Styles{
    <link rel="stylesheet" href="~/css/keyframe.css" />
}